/* common styling */
.menu {
	width:854px; 
	height:27px; 
	position:relative; 
	font-size: .9em;
	z-index:100;
	float: left;
	margin: 35px 0 -9px 30px;
 }

.menu ul li a, .menu ul li a:visited {
	display:block; 
	text-decoration:none; 
	overflow:hidden;
}

.menu ul {
	padding:0; 
	margin:0; 
	list-style: none;
}

.menu ul li {
	float:left; 
	position:relative;
}

.menu ul li ul {
	display: none;
}

.menu ul li ul li {
	width: 160px;
	line-height: 2em;
}

/* specific to non IE browsers */
.menu ul li:hover a {
	color:#fff; 
	background:#36f;
}

.menu ul li:hover ul {
	display:block; 
	position:absolute; 
	top:27px; 
	left:0; 
	width:105px;
}

.menu ul li:hover ul li a.hide {
	
}

.menu ul li:hover ul li:hover a.hide {
	color:#000;
}

.menu ul li:hover ul li ul {
	display: none;
}

.menu ul li:hover ul li a {
	display:block; 
	background:#FFF; 
	color:#525252;
	padding-left:15px;
}

.menu ul li:hover ul li a:hover {
	background:#e2e2e2; 
	color:#000;
}

.menu ul li:hover ul li:hover ul {
	display:block; 
	position:absolute; 
	left:105px; 
	top:0;
}

.menu ul li:hover ul li:hover ul.left {
	left: 160px;
}

